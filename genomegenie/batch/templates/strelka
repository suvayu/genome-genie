% if tumor_bam is UNDEFINED:
configureStrelkaSomaticWorkflow.py \
    --tumorBam ${tumor_bam} \
    --normalBam ${normal_bam} \
% else:
configureStrelkaGermlineWorkflow.py \
    --bam ${normal_bam} \
% endif
    --referenceFasta ${ref_fasta} \
    --runDir ${output}

pushd ${output}

./runWorkflow.py -m local \
% if nprocs is not UNDEFINED:
    -j ${f'{nprocs}'}
% endif
