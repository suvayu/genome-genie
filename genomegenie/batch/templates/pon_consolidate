<%!
    from genomegenie.batch.filters import bam2pon, path_transform
%>

cat <<EOF > ${normals_list}
% for bam in normal_bam:
${path_transform(bam, output) | bam2pon}
% endfor
EOF

$GATKHOME/gatk \
% if javaopts is UNDEFINED:
    --java-options '-Xmx64g' \
% else:
    --java-options ${javaopts} \
% endif
    CreateSomaticPanelOfNormals \
    -vcfs ${normals_list} \
    -O ${pon}
