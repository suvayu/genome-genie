<%!
    from genomegenie.batch.filters import bam2tsv, bam2vcf, path_transform
%>

MuSE call -f ${ref_fasta} \
-O ${path_transform(normal_bam, output) | bam2tsv} \
${tumor_bam} ${normal_bam}

MuSE sump -I ${path_transform(normal_bam, output) | bam2tsv} \
-O ${path_transform(normal_bam, output) | bam2vcf} -D ${db} \
${'-E' if exome_bed is UNDEFINED else '-G'}
