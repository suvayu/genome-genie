<%!
    from genomegenie.batch.filters import bam2vcf, path_transform
%>

MuSE call -f ${ref_fasta} \
-O ${path_transform(normal_bam, output)} \
${tumor_bam} ${normal_bam}

MuSE sump -I ${path_transform(normal_bam, output) + '.MuSE.txt'} \
-O ${path_transform(normal_bam, output) | bam2vcf} -D ${db} \
${'-G' if exome_bed is UNDEFINED else '-E'}
